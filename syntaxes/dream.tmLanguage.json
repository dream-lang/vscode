{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Dream",
  "patterns": [{ "include": "#expression" }],
  "repository": {
    "expression": {
      "patterns": [
        { "include": "#strings" },
        { "include": "#keywords" },
        { "include": "#function-definition" },
        { "include": "#function-call" },
        { "include": "#number" },
        { "include": "#identifier" },
        { "include": "#identifier-literal" },
        { "include": "#operator" },
        { "include": "#paren-expression" },
        { "include": "#comment" }
      ]
    },
    "function-definition": {
      "begin": "fn ",
      "end": "\\(",
      "beginCaptures": {
        "0": { "name": "keyword.operator.new" }
      },
      "name": "entity",
      "patterns": [
        {
          "name": "constant",
          "match": "[^\\s\\.]+"
        }
      ]
    },
    "function-call": {
      "name": "entity.name.function",
      "match": "[^\\s\\.\\:\\,]+\\("
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.dream",
          "match": "\\b(if|while|for|return|break)\\b"
        },
        {
          "name": "keyword.operator.new",
          "match": "\\b(let|var|define|macro)\\b"
        },
        {
          "name": "keyword",
          "match": "\\b(fn|type)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.dream",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.dream",
          "match": "\\\\."
        }
      ]
    },
    "operator": {
      "name": "entity.name.function",
      "match": "\\s(=|==|\\?|\\.|\\+|\\-|\\\\|\\*|=>|>=|<=|\\<|\\>|\\&)\\s"
    },
    "identifier": {
      "name": "variable.name",
      "match": "[^\\s\\.\\:\\,]+"
    },
    "number": {
      "name": "constant.numeric",
      "match": "[+-]?\\d+(\\.\\d+$)?"
    },
    "identifier-literal": {
      "name": "entity.name",
      "begin": "'",
      "end": "'"
    },
    "paren-expression": {
      "begin": "\\b[\\(\\{\\[]\\b",
      "end": "\\b[\\)\\}\\]]\\b",
      "beginCaptures": {
        "0": { "name": "punctuation.paren.open" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.paren.close" }
      },
      "name": "expression.group",
      "patterns": [{ "include": "#expression" }]
    },
    "comment": {
      "begin": "//",
      "end": "\n",
      "name": "comment.line.double-slash"
    }
  },
  "scopeName": "index.dm"
}
